{
  "compilerOptions": {
    "target": "ES5",
    "module":"ES6",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build",

    /* Strict Type-checking Options */
    "strict": true,

    /* Module Resolution Option */ 
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Option */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}